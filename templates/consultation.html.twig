{% extends 'base.html.twig' %}

{% block body %}
    <div class="bg-stone-100 relative overflow-hidden">
        <section id="about" class="relative overflow-hidden mt-6">
            <div class="mx-auto max-w-screen-xl flex flex-col lg:flex-row items-center justify-between px-4">
                <h1 class="mb-6 text-center tracking-tight font-extrabold text-stone-700 text-4xl">
                    Book your consultation today!
                </h1>
            </div>
        </section>

        <div class="mx-auto max-w-screen-xl px-4 pt-4 pb-6">
            <p class="mb-4 lg:mb-8 font-light text-stone-500">
                Make your selection below to book a free virtual consultation or a private session.
            </p>

            <ul class="flex flex-wrap text-sm font-medium text-center text-gray-500" id="consultation-tabs" data-tabs-toggle="#consultation-frame" role="tablist"
                data-tabs-active-classes="text-white bg-primary-600"
                data-tabs-inactive-classes="text-primary-800 hover:text-white hover:bg-stone-700"
            >
                <li class="me-2">
                    <button data-tabs-target="#virtual" type="button" role="tab" aria-controls="virtual" class="inline-block px-4 py-3 rounded-lg text-primary-800 hover:text-white hover:bg-stone-700"
                    {% if type == 'free' %}aria-current="page" aria-selected="true" {% else %}aria-selected="false"{% endif %}
                    >
                        Free Virtual Consultation
                    </button>
                </li>
                <li class="me-2">
                    <button data-tabs-target="#private" type="button" role="tab" aria-controls="private" class="inline-block px-4 py-3 rounded-lg text-primary-800 hover:text-white hover:bg-stone-700"
                    {% if type == 'private' %}aria-current="page" aria-selected="true" {% else %}aria-selected="false"{% endif %}
                    >
                        Private Session
                    </button>
                </li>
            </ul>
        </div>
    </div>

    <div id="consultation-frame" class="mx-auto max-w-screen-xl px-4 mb-12">
        <div class="hidden" id="virtual" role="tabpanel" aria-labelledby="virtual-tab">
            <iframe src="https://app.acuityscheduling.com/schedule.php?owner=33068165&appointmentType=66971758&ref=embedded_csp" title="Schedule Appointment" width="100%" height="800" frameBorder="0"></iframe><script src="https://embed.acuityscheduling.com/js/embed.js" type="text/javascript"></script>
        </div>
        <div class="hidden" id="private" role="tabpanel" aria-labelledby="private-tab">
            <iframe src="https://app.acuityscheduling.com/schedule.php?owner=33068165&appointmentType=67185579&ref=embedded_csp" title="Schedule Appointment" width="100%" height="800" frameBorder="0"></iframe><script src="https://embed.acuityscheduling.com/js/embed.js" type="text/javascript"></script>
        </div>
    </div>

{% endblock %}
