{% extends 'base.html.twig' %}

{% block body %}
    <div class="relative overflow-hidden bg-body-900">
        <img src="{{ asset('images/consultation-bg2.jpg') }}"
             srcset="{{ asset('images/consultation-bg2.jpg') }} 600w, {{ asset('images/consultation-bg2.jpg') }} 1200w"
             alt="Breathing Nook - Book your consultation today!" class="absolute inset-0 object-cover w-full h-full opacity-90">

        <section id="about" class="relative overflow-hidden mt-6">
            <div class="mx-auto max-w-screen-xl flex flex-col lg:flex-row items-center justify-center px-4 pt-28">
                <h1 class="mb-2 text-center tracking-tight font-extrabold text-body-50 text-4xl">
                    Book your consultation today!
                </h1>
            </div>
        </section>

        <div class="mx-auto max-w-screen-xl px-4 pt-4 pb-6 relative">
            <p class="mb-4 lg:mb-8 font-light text-body-100 text-center italic">
                Make your selection below to book a free virtual consultation or a private session.
            </p>

            <ul class="flex flex-wrap justify-center items-center text-sm md:text-base font-medium text-center text-gray-500 pb-2" id="consultation-tabs" data-tabs-toggle="#consultation-frame" role="tablist"
                data-tabs-active-classes="text-white bg-primary-600"
                data-tabs-inactive-classes="text-primary-100 hover:text-white hover:bg-primary-700"
            >
                <li class="me-2">
                    <button data-tabs-target="#virtual" type="button" role="tab" aria-controls="virtual" class="inline-block px-4 py-3 rounded-lg text-primary-100 hover:text-white hover:bg-primary-700"
                    {% if type == 'free' %}aria-current="page" aria-selected="true" {% else %}aria-selected="false"{% endif %}
                    >
                        Free Virtual Consultation
                    </button>
                </li>
                <li class="me-2">
                    <button data-tabs-target="#private" type="button" role="tab" aria-controls="private" class="inline-block px-4 py-3 rounded-lg text-primary-100 hover:text-white hover:bg-primary-700"
                    {% if type == 'private' %}aria-current="page" aria-selected="true" {% else %}aria-selected="false"{% endif %}
                    >
                        Private Session
                    </button>
                </li>
            </ul>
        </div>
    </div>

    <div id="consultation-frame" class="mx-auto max-w-screen-xl p-2 lg:p-4 mb-12">
        <div class="hidden rounded-xl overflow-hidden shadow-md" id="virtual" role="tabpanel" aria-labelledby="virtual-tab">
            <iframe src="https://app.acuityscheduling.com/schedule.php?owner=33068165&appointmentType=66971758&ref=embedded_csp" title="Schedule Appointment" width="100%" height="800" frameBorder="0"></iframe><script src="https://embed.acuityscheduling.com/js/embed.js" type="text/javascript"></script>
        </div>
        <div class="hidden rounded-xl overflow-hidden shadow-md" id="private" role="tabpanel" aria-labelledby="private-tab">
            <iframe src="https://app.acuityscheduling.com/schedule.php?owner=33068165&appointmentType=67185579&ref=embedded_csp" title="Schedule Appointment" width="100%" height="800" frameBorder="0"></iframe><script src="https://embed.acuityscheduling.com/js/embed.js" type="text/javascript"></script>
        </div>
    </div>

{% endblock %}
